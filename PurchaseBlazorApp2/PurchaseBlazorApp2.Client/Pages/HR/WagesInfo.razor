                }
            }
        );

        return;
    }

    private async Task PrintWages()
    {
        if (MyWageInfo.WageRecords.Count == 0)
        {
            await JS.InvokeVoidAsync("alert", "Table is empty");
            return;
        }

        GenerateWagesPdfRequest wagesPdfRequest = new GenerateWagesPdfRequest
        {
            Year = MyWageInfo.Year,
            Month = MyWageInfo.Month
        };

        var json = await JS.InvokeAsync<string>("getCookie", "userKey");
        if (!string.IsNullOrWhiteSpace(json))
        {
            try
            {
                UserName restoredUser = System.Text.Json.JsonSerializer.Deserialize<UserName>(json);
                wagesPdfRequest.MyUser = restoredUser;
            }
            catch { }
        }
        try
        {
            var response = await Http.PostAsJsonAsync("api/pdf/purchase", wagesPdfRequest);
            if (!response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Failed to generate PDF for printing");
                return;
            }

            byte[] pdfBytes = await response.Content.ReadAsByteArrayAsync();
            var base64 = Convert.ToBase64String(pdfBytes);
            await JS.InvokeVoidAsync("Print", base64);
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error printing PDF: {ex.Message}");
        }
    }

    private async Task PrintSelectedSlip()
    {
        var selectedWorkers = FilteredWageRecords.Where(w => w.bSelected).ToList();
        if (!selectedWorkers.Any())
        {
            await JS.InvokeVoidAsync("alert", "No worker selected");
            return;
        }

        var base64 = new List<string>();

        foreach (var worker in selectedWorkers)
        {
            var workerInfo = await Http.GetFromJsonAsync<WorkerRecord>(
                $"api/HR/GetWorkerById?id={worker.ID}");

            if (workerInfo != null)
            {
                worker.Passport = workerInfo.Passport ?? string.Empty;
                worker.Designation = workerInfo.Designation ?? string.Empty;
                worker.Status = workerInfo.Status ?? string.Empty;
            }

            var response = await Http.PostAsJsonAsync("api/pdf/slip", worker);
            if (!response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", $"Failed to generate PDF for {worker.Name}");
                continue;
            }

            var pdfBytes = await response.Content.ReadAsByteArrayAsync();
            base64.Add(Convert.ToBase64String(pdfBytes));
        }
        var CombineResponse = await Http.PostAsJsonAsync("api/pdf/Combineslip", base64);
        if (!CombineResponse.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", $"Failed to combine pdf");
            return;
        }
        var SinglePDF = await CombineResponse.Content.ReadAsStringAsync();

        if (base64.Count > 0)
            await JS.InvokeVoidAsync("Print", SinglePDF);
    }

