                    new ExcelColConfig(nameof(SingleWageRecord.Socso_Employer)),
                    new ExcelColConfig(nameof(SingleWageRecord.Socso_Employee)),
                    new ExcelColConfig(nameof(SingleWageRecord.Deduction)),
