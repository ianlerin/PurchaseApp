    private bool CheckAllSelected()
    {
        bool bAllSelected = FilteredWageRecords.All(i => i.bSelected);

        return bAllSelected;
    }

    private void CheckBSelected(bool bAllSelected)
    {
        HashSet<string> setId = FilteredWageRecords.Select(i => i.ID).ToHashSet();

        for(int i = 0; i < MyWageInfo.WageRecords.Count; i++)
        {
            if(setId.Contains(MyWageInfo.WageRecords[i].ID))
            {
                MyWageInfo.WageRecords[i].bSelected = bAllSelected;
            }
        }

        return;
    }
